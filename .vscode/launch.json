{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Recipie Sharing API",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "nodemon",
      "program": "${workspaceFolder}/recipie-sharing/server.js",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "development"
      },
      "envFile": "${workspaceFolder}/recipie-sharing/.env"
    }
  ]
}
